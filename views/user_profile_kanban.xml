<odoo>
    <record id="view_user_profile_kanban" model="ir.ui.view">
        <field name="name">user.profile.kanban</field>
        <field name="model">user.profile</field>
        <field name="arch" type="xml">
            <kanban string="User Profiles">
                <field name="name"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="o_kanban_record">
                            <div class="o_kanban_record_body">
                                <strong><t t-esc="record.name.value"/></strong>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
